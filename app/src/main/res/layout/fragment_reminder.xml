<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Top Nav Bar-->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--Back Button-->
        <Button
            android:id="@+id/reminderBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/darker_gray"
            android:text="Back"
            android:textColor="@android:color/white" />

        <!--Reminder List-->
        <TextView
            android:id="@+id/reminderListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Reminder List"
            android:textColor="@android:color/white" />

        <!--New Reminder Button-->
        <Button
            android:id="@+id/newReminderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/darker_gray"
            android:text="New"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!--(DEMO) single reminder element-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        tools:layout_editor_absoluteX="191dp">

        <!--Name-->
        <TextView
            android:id="@+id/reminderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODO: [REMINDER NAME]"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!--Time&Location-->
        <TextView
            android:id="@+id/reminderTimeLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: [insert time], Location: [insert location]"
            android:textSize="14sp" />

        <!--Description-->
        <TextView
            android:id="@+id/reminderDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: [insert description]"
            android:textSize="14sp" />

    </LinearLayout>

